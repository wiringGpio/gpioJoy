<?xml version="1.0" encoding="utf-8"?><GpioConfig>  <MCPs>    <!--Seven segment display using pins from from MCP chip at 0x22 pin base 700-->    <MCP>      <Type>Mcp23017</Type>      <Address>34</Address>      <Base>700</Base>    </MCP>  </MCPs>  <PinModes>    <!--  Seven segment display -->    <!-- Digits -->    <Pin>      <!-- White -->      <Number>700</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- Grey -->      <Number>701</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- Black  -->      <Number>702</Number>      <Mode>Output</Mode>    </Pin>    <!-- Segments a - g and decimal -->    <Pin>      <!-- a Purple/Silver -->      <Number>713</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- b Yellow/Silver -->      <Number>715</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- c Orange -->      <Number>711</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- d Blue -->      <Number>709</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- e Purple -->      <Number>708</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- f Black/Silver-->      <Number>714</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- g Brown -->      <Number>712</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- dot Yellow -->      <Number>710</Number>      <Mode>Output</Mode>    </Pin>          </PinModes>  <SevenSegDisplays>    <SevenSegDisplay>      <Name>BoardSevenSeg</Name>      <DisplayName>7 Seg. Display</DisplayName>      <SegPins>713,715,711,709,708,714,712,710</SegPins>      <Digits>-700,-701,-702</Digits>      <Joystick direction="1">LeftStickUp</Joystick>      <Joystick direction="-1">LeftStickDown</Joystick>    </SevenSegDisplay>  </SevenSegDisplays>  <JoystickFunctions>    <!-- Schema to define joystick inputs mapped to methods -->    <Function>      <Joystick>HomeBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoHome</Method>      <DisplayName>Home</DisplayName>    </Function>    <Function>      <Joystick>BackBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoBack</Method>      <DisplayName>Back</DisplayName>    </Function>    <Function>      <Joystick>StartBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoForward</Method>      <DisplayName>Next</DisplayName>    </Function>  </JoystickFunctions></GpioConfig>