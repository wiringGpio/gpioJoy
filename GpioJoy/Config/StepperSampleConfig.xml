<?xml version="1.0" encoding="utf-8"?><GpioConfig>  <MCPs>    <!--Unipolar stepper motor using pins from MCP chip at 0x27 pin base 400-->    <MCP>      <Type>Mcp23008</Type>      <Address>39</Address>      <Base>400</Base>    </MCP>  </MCPs>  <PCAs>    <!--Bipolar setpper motor using M1 and M2 slots of Adafruit motor hat at 0x60 pin base 600-->    <PCA>      <Address>96</Address>      <Base>600</Base>      <Frequency>50</Frequency>    </PCA>  </PCAs>    <PinModes>    <!--Unipolar motor on MCP 401-404-->    <Pin>      <Number>401</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>402</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>403</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>404</Number>      <Mode>Output</Mode>    </Pin>    <!--Bipolar motor on M1 / M2 of motor hat-->    <Pin>      <Number>608</Number>      <Mode>PWMOutput</Mode>    </Pin>    <Pin>      <Number>609</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>610</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>611</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>612</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>613</Number>      <Mode>PWMOutput</Mode>    </Pin>      </PinModes>  <StepperDrivers>    <!-- Stepper Sequence -->    <StepperSequence>      <Id>1</Id>      <SequenceItems>        <Item>1, 0, 0, 0</Item>        <Item>0, 1, 0, 0</Item>        <Item>0, 0, 1, 0</Item>        <Item>0, 0, 0, 1 </Item>      </SequenceItems>    </StepperSequence>    <!--  Stepper driver for unipolar on MCP chip-->    <StepperDriver>      <Name>Stepper One</Name>      <Sequence>1</Sequence>      <Pins>401,402,403,404</Pins>      <MinDelay>2</MinDelay>      <MaxDelay>100</MaxDelay>      <Joystick direction="1">RightStickUp</Joystick>      <Joystick direction="-1">RightStickDown</Joystick>    </StepperDriver>    <!-- Stpeer driver for bipolar on PCA chip  -->    <!-- wired to M1 and M2 terminals on the Adafruit motor hat -->    <StepperDriver>      <Name>Stepper Two</Name>      <Sequence>1</Sequence>      <Pins>608,-613,-608, 613</Pins>      <!--<PwmScale>0.5</PwmScale>-->      <MinDelay>5</MinDelay>      <MaxDelay>500</MaxDelay>      <HBridge>608,610,609</HBridge>      <HBridge>613,611,612</HBridge>      <Joystick direction="1">LeftStickUp</Joystick>      <Joystick direction="-1">LeftStickDown</Joystick>    </StepperDriver>  </StepperDrivers>  <JoystickFunctions>    <!-- Schema to define joystick inputs mapped to methods -->    <Function>      <Joystick>HomeBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoHome</Method>      <Name>Home</Name>    </Function>    <Function>      <Joystick>BackBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoBack</Method>      <Name>Back</Name>    </Function>    <Function>      <Joystick>StartBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoForward</Method>      <Name>Next</Name>    </Function>  </JoystickFunctions></GpioConfig>