<?xml version="1.0" encoding="utf-8"?><GpioConfig>  <!-- GpioConfig  -->    <!--  Configuration Step 1:  Define MCP Expander Chips-->  <MCPs>   <MCP>      <Type>Mcp23017</Type>         <Address>32</Address>         <Base>100</Base>            </MCP>   </MCPs>  <!-- Configuration Step 3:  Define Control Pins -->  <ControlPins>    <!--  MCP Chip for 3dof tower -->    <Pin>      <Number>100</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>101</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>102</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>103</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>104</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>105</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>106</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>107</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>108</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>109</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>110</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>111</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>112</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>113</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>114</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>115</Number>      <Mode>Output</Mode>    </Pin>    <!--  Map the joystick buttons on the gpiojoy board -->    <!-- Left Side -->       <Pin>      <Name>Start Demo</Name>      <Number>206</Number>      <Mode>Output</Mode>      <Joystick>LeftBumper</Joystick>    </Pin>    <Pin>      <Number>205</Number>      <Mode>PWMOutput</Mode>      <Joystick>LeftStickUp</Joystick>    </Pin>    <Pin>      <Number>204</Number>      <Mode>PWMOutput</Mode>      <Joystick>LeftStickRight</Joystick>    </Pin>    <Pin>      <Number>203</Number>      <Mode>PWMOutput</Mode>      <Joystick>LeftStickDown</Joystick>    </Pin>    <Pin>      <Number>202</Number>      <Mode>PWMOutput</Mode>      <Joystick>LeftStickLeft</Joystick>    </Pin>       <Pin>      <Name>+ X</Name>      <Number>200</Number>      <Mode>Output</Mode>      <Joystick>DpadUp</Joystick>    </Pin>    <Pin>      <Name>+ Y</Name>      <Number>208</Number>      <Mode>Output</Mode>      <Joystick>DpadRight</Joystick>    </Pin>    <Pin>      <Name>- X</Name>      <Number>209</Number>      <Mode>Output</Mode>      <Joystick>DpadDown</Joystick>    </Pin>    <Pin>      <Name>- Y</Name>      <Number>210</Number>      <Mode>Output</Mode>      <Joystick>DpadLeft</Joystick>    </Pin>    <!-- Home Row -->    <Pin>      <Name>Back</Name>      <Number>211</Number>      <Mode>Output</Mode>      <Joystick>BackBtn</Joystick>    </Pin>    <Pin>      <Name>Home</Name>      <Number>212</Number>      <Mode>Output</Mode>      <Joystick>HomeBtn</Joystick>    </Pin>    <Pin>      <Name>Next</Name>      <Number>213</Number>      <Mode>Output</Mode>      <Joystick>StartBtn</Joystick>    </Pin>    <!-- Right Side -->       <Pin>      <Number>215</Number>      <Mode>PWMOutput</Mode>      <Joystick>RightStickRight</Joystick>    </Pin>        <Pin>      <Number>306</Number>      <Mode>PWMOutput</Mode>      <Joystick>RightStickLeft</Joystick>    </Pin>           <Pin>      <Name>+ Z</Name>      <Number>304</Number>      <Mode>Output</Mode>      <Joystick>BBtn</Joystick>    </Pin>       <Pin>      <Name>- Z</Name>      <Number>302</Number>      <Mode>Output</Mode>      <Joystick>XBtn</Joystick>    </Pin>       <Pin>      <Name>Stop Demo</Name>      <Number>301</Number>      <Mode>Output</Mode>      <Joystick>RightBumper</Joystick>    </Pin>      </ControlPins>  <!--  Define Stepper Motor Drivers  -->  <StepperDrivers>        -->    <!-- Stepper Sequence -->    <StepperSequence>      <Id>1</Id>      <SequenceItems>        <Item>1, 0, 0, 0</Item>        <Item>0, 1, 0, 0</Item>        <Item>0, 0, 1, 0</Item>        <Item>0, 0, 0, 1 </Item>      </SequenceItems>    </StepperSequence>       <!--Stepper Driver -->        <!--  Stepper driver for unipolar on MCP chip-->    <StepperDriver>      <Sequence>1</Sequence>      <Name>Z</Name>      <Pins>100,101,102,103</Pins>      <MinDelay>10</MinDelay>      <MaxDelay>100</MaxDelay>      <Joystick direction="1">RightStickRight</Joystick>      <Joystick direction="-1">RightStickLeft</Joystick>    </StepperDriver>    <StepperDriver>      <Sequence>1</Sequence>      <Name>X</Name>      <Pins>104,105,106,107</Pins>      <MinDelay>10</MinDelay>      <MaxDelay>100</MaxDelay>      <Joystick direction="1">LeftStickUp</Joystick>      <Joystick direction="-1">LeftStickDown</Joystick>    </StepperDriver>    <StepperDriver>      <Sequence>1</Sequence>      <Name>Y</Name>      <Pins>108,109,110,111</Pins>      <MinDelay>10</MinDelay>      <MaxDelay>100</MaxDelay>      <Joystick direction="1">LeftStickRight</Joystick>      <Joystick direction="-1">LeftStickLeft</Joystick>    </StepperDriver>  </StepperDrivers>  <!-- Define HBridges -->  <JoystickFunctions>        <!-- Schema to define joystick inputs mapped to methods -->    <Function>      <Joystick>HomeBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoHome</Method>    </Function>    <Function>      <Joystick>BackBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoBack</Method>    </Function>    <Function>      <Joystick>StartBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoForward</Method>    </Function>    <Function>      <Joystick>DpadUp</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">DpadUpThreeDof</Method>    </Function>    <Function>      <Joystick>DpadDown</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">DpadDownThreeDof</Method>    </Function>    <Function>      <Joystick>DpadRight</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">DpadRightThreeDof</Method>    </Function>    <Function>      <Joystick>DpadLeft</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">DpadLeftThreeDof</Method>    </Function>    <Function>      <Joystick>LeftBumper</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">LeftBumperThreeDof</Method>    </Function>    <Function>      <Joystick>RightBumper</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">RightBumperThreeDof</Method>    </Function>    <Function>      <Joystick>BBtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">BBtnThreeDof</Method>    </Function>    <Function>      <Joystick>XBtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">XBtnThreeDof</Method>    </Function>  </JoystickFunctions></GpioConfig>