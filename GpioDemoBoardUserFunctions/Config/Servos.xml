<?xml version="1.0" encoding="utf-8"?><GpioConfig>  <MCPs>    <MCP>      <Type>Mcp23017</Type>      <!-- chip at 0x23-->      <Address>35</Address>      <Base>200</Base>    </MCP>    <MCP>      <Type>Mcp23008</Type>      <!-- chip at 0x24-->      <Address>36</Address>      <Base>300</Base>    </MCP>    <MCP>      <Type>Mcp23017</Type>      <!-- chip at 0x22-->      <Address>34</Address>      <Base>700</Base>    </MCP>  </MCPs>  <PCAs>    <PCA>      <!-- adafruit pwm hat at default address 0x40-->      <Address>64</Address>      <Base>500</Base>      <Frequency>50</Frequency>    </PCA>  </PCAs>  <PinModes>    <!--  Adafruit PWM driver-->    <Pin>      <DisplayName>Servo One</DisplayName>      <Number>500</Number>      <Mode>PWMOutput</Mode>      <Joystick servo="true" direction="1">LeftStickUp</Joystick>      <Joystick servo="true" direction="-1">LeftStickDown</Joystick>    </Pin>    <Pin>      <DisplayName>Servo Two</DisplayName>      <Number>501</Number>      <Mode>PWMOutput</Mode>      <Joystick servo="true" direction="1">RightStickUp</Joystick>      <Joystick servo="true" direction="-1">RightStickDown</Joystick>    </Pin>    <!--  Seven segment display -->    <!-- Digits -->    <Pin>      <!-- White -->      <Number>700</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- Grey -->      <Number>701</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- Black  -->      <Number>702</Number>      <Mode>Output</Mode>    </Pin>    <!-- Segments a - g and decimal -->    <Pin>      <!-- a Purple/Silver -->      <Number>713</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- b Yellow/Silver -->      <Number>715</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- c Orange -->      <Number>711</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- d Blue -->      <Number>709</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- e Purple -->      <Number>708</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- f Black/Silver-->      <Number>714</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- g Brown -->      <Number>712</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <!-- dot Yellow -->      <Number>710</Number>      <Mode>Output</Mode>    </Pin>    <!-- XBox Joystick model -->    <!-- Left Side -->    <Pin>      <DisplayName>Servo One</DisplayName>      <Number>205</Number>      <Mode>PWMOutput</Mode>      <Joystick>LeftStickUp</Joystick>    </Pin>    <Pin>      <DisplayName>Servo One</DisplayName>      <Number>203</Number>      <Mode>PWMOutput</Mode>      <Joystick>LeftStickDown</Joystick>    </Pin>    <Pin>      <DisplayName>Servo +</DisplayName>      <Number>200</Number>      <Mode>Output</Mode>      <Joystick>DpadUp</Joystick>    </Pin>    <Pin>      <DisplayName>Servo Center</DisplayName>      <Number>208</Number>      <Mode>Output</Mode>      <Joystick>DpadRight</Joystick>    </Pin>    <Pin>      <DisplayName>Servo -</DisplayName>      <Number>209</Number>      <Mode>Output</Mode>      <Joystick>DpadDown</Joystick>    </Pin>    <!-- Home Row -->    <Pin>      <DisplayName>Back</DisplayName>      <Number>211</Number>      <Mode>Output</Mode>      <Joystick>BackBtn</Joystick>    </Pin>    <Pin>      <DisplayName>Home</DisplayName>      <Number>212</Number>      <Mode>Output</Mode>      <Joystick>HomeBtn</Joystick>    </Pin>    <Pin>      <DisplayName>Next</DisplayName>      <Number>213</Number>      <Mode>Output</Mode>      <Joystick>StartBtn</Joystick>    </Pin>    <!-- Right Side -->    <Pin>      <DisplayName>Servo Two</DisplayName>      <Number>214</Number>      <Mode>PWMOutput</Mode>      <Joystick>RightStickUp</Joystick>    </Pin>    <Pin>      <DisplayName>Servo Two</DisplayName>      <Number>307</Number>      <Mode>PWMOutput</Mode>      <Joystick>RightStickDown</Joystick>    </Pin>    <Pin>      <DisplayName>Servo +</DisplayName>      <Number>305</Number>      <Mode>Output</Mode>      <Joystick>YBtn</Joystick>    </Pin>    <Pin>      <DisplayName>Servo Center</DisplayName>      <Number>304</Number>      <Mode>Output</Mode>      <Joystick>BBtn</Joystick>    </Pin>    <Pin>      <DisplayName>Servo -</DisplayName>      <Number>303</Number>      <Mode>Output</Mode>      <Joystick>ABtn</Joystick>    </Pin>  </PinModes>  <!-- Seven Segment Displays -->  <SevenSegDisplays>    <SevenSegDisplay>      <Name>BoardSevenSeg</Name>      <SegPins>713,715,711,709,708,714,712,710</SegPins>      <Digits>-700,-701,-702</Digits>    </SevenSegDisplay>  </SevenSegDisplays>  <JoystickFunctions>    <!-- Switch config function -->    <Function>      <Joystick>HomeBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoHome</Method>    </Function>    <Function>      <Joystick>BackBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoBack</Method>    </Function>    <Function>      <Joystick>StartBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoForward</Method>    </Function>    <Assembly>      <Name>GpioDemoBoardUserFunctions.dll</Name>      <Setup class="GpioDemoBoardUserFunctions.UserFunctions">InitServosConfig</Setup>    </Assembly>    <!--Servo control-->    <Function>      <Joystick>DpadUp</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">DPadUpServoPlus</Method>    </Function>    <Function>      <Joystick>DpadDown</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">DPadDownServoMinus</Method>    </Function>    <Function>      <Joystick>DpadRight</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">DPadRightServoCenter</Method>    </Function>    <!-- Servo Two Control  -->    <Function>      <Joystick>YBtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">YBtnServoTwoPlus</Method>    </Function>    <Function>      <Joystick>ABtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">ABtnServoTwoOneMinus</Method>    </Function>    <Function>      <Joystick>BBtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">BBtServoTwoCenter</Method>    </Function>  </JoystickFunctions></GpioConfig>