<?xml version="1.0" encoding="utf-8"?><GpioConfig>  <MCPs>    <!--Unipolar stepper motor using pins from MCP chip at 0x27 pin base 400-->    <MCP>      <Type>Mcp23008</Type>      <Address>39</Address>      <Base>400</Base>    </MCP>  </MCPs>  <PCAs>    <!--Bipolar setpper motor using M1 and M2 slots of Adafruit motor hat at 0x60 pin base 600-->    <PCA>      <Address>96</Address>      <Base>600</Base>      <Frequency>50</Frequency>    </PCA>  </PCAs>  <!-- Configuration Step 3:  Define Control Pins -->  <PinModes>    <!--Unipolar motor on MCP 401-404-->    <Pin>      <Number>401</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>402</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>403</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>404</Number>      <Mode>Output</Mode>    </Pin>    <!--Bipolar motor on M1 / M2 of motor hat-->    <Pin>      <Number>608</Number>      <Mode>PWMOutput</Mode>    </Pin>    <Pin>      <Number>609</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>610</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>611</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>612</Number>      <Mode>Output</Mode>    </Pin>    <Pin>      <Number>613</Number>      <Mode>PWMOutput</Mode>    </Pin>    <!-- XBox Joystick connected to MCP expansion chips -->    <!-- Left Side -->    <Pin>      <DisplayName>Stepper Two</DisplayName>      <Number>205</Number>      <Mode>PWMOutput</Mode>      <Joystick>LeftStickUp</Joystick>    </Pin>    <Pin>      <DisplayName>Stepper Two</DisplayName>      <Number>203</Number>      <Mode>PWMOutput</Mode>      <Joystick>LeftStickDown</Joystick>    </Pin>    <!-- Home Row -->    <Pin>      <DisplayName>Back</DisplayName>      <Number>211</Number>      <Mode>Output</Mode>      <Joystick>BackBtn</Joystick>    </Pin>    <Pin>      <DisplayName>Home</DisplayName>      <Number>212</Number>      <Mode>Output</Mode>      <Joystick>HomeBtn</Joystick>    </Pin>    <Pin>      <DisplayName>Start</DisplayName>      <Number>213</Number>      <Mode>Output</Mode>      <Joystick>StartBtn</Joystick>    </Pin>    <!-- Right Side -->    <Pin>      <DisplayName>Stepper One</DisplayName>      <Number>214</Number>      <Mode>PWMOutput</Mode>      <Joystick>RightStickUp</Joystick>    </Pin>    <Pin>      <DisplayName>Stepper One</DisplayName>      <Number>307</Number>      <Mode>PWMOutput</Mode>      <Joystick>RightStickDown</Joystick>    </Pin>    <Pin>      <DisplayName>Delay +</DisplayName>      <Number>305</Number>      <Mode>Output</Mode>      <Joystick>YBtn</Joystick>    </Pin>    <Pin>      <DisplayName>Stop</DisplayName>      <Number>304</Number>      <Mode>Output</Mode>      <Joystick>BBtn</Joystick>    </Pin>    <!--<Pin>      <DisplayName>Delay -</DisplayName>      <Number>303</Number>      <Mode>Output</Mode>      <Joystick>ABtn</Joystick>    </Pin>-->    <!--<Pin>      <DisplayName>Reset</DisplayName>      <Number>302</Number>      <Mode>Output</Mode>      <Joystick>XBtn</Joystick>    </Pin>-->  </PinModes>  <!--  Define Stepper Motor Drivers  -->  <StepperDrivers>    <!-- Stepper Sequence -->    <StepperSequence>      <Id>1</Id>      <SequenceItems>        <Item>1, 0, 0, 0</Item>        <Item>0, 1, 0, 0</Item>        <Item>0, 0, 1, 0</Item>        <Item>0, 0, 0, 1 </Item>      </SequenceItems>    </StepperSequence>    <StepperSequence>      <Id>2</Id>      <SequenceItems>        <Item>1, 0, 0, 1</Item>        <Item>1, 1, 0, 0</Item>        <Item>0, 1, 1, 0</Item>        <Item>0, 0, 1, 1 </Item>      </SequenceItems>    </StepperSequence>    <!--Stepper Driver -->    <!--  Stepper driver for unipolar on MCP chip-->    <StepperDriver>      <Name>StepperOne</Name>      <DisplayName>Stepper One</DisplayName>      <Sequence>1</Sequence>      <Pins>401,402,403,404</Pins>      <MinDelay>2</MinDelay>      <MaxDelay>100</MaxDelay>      <Joystick direction="1">RightStickUp</Joystick>      <Joystick direction="-1">RightStickDown</Joystick>    </StepperDriver>    <!-- Stpeer driver for bipolar on PCA chip  -->    <!-- wired to M1 and M2 terminals on the Adafruit motor hat -->    <StepperDriver>      <Name>StepperTwo</Name>      <DisplayName>Stepper Two</DisplayName>      <Sequence>1</Sequence>      <Pins>608,-613,-608, 613</Pins>      <!--<PwmScale>0.5</PwmScale>-->      <MinDelay>15</MinDelay>      <MaxDelay>500</MaxDelay>      <HBridge>608,610,609</HBridge>      <HBridge>613,611,612</HBridge>      <Joystick direction="1">LeftStickUp</Joystick>      <Joystick direction="-1">LeftStickDown</Joystick>    </StepperDriver>  </StepperDrivers>  <!-- Seven Segment Displays -->  <SevenSegDisplays>    <SevenSegDisplay>      <Name>BoardSevenSeg</Name>      <SegPins>713,715,711,709,708,714,712,710</SegPins>      <Digits>-700,-701,-702</Digits>      <Joystick direction="1">LeftStickUp</Joystick>      <Joystick direction="-1">LeftStickDown</Joystick>    </SevenSegDisplay>  </SevenSegDisplays>  <JoystickFunctions>    <!-- Schema to define joystick inputs mapped to methods -->    <Function>      <Joystick>HomeBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoHome</Method>    </Function>    <Function>      <Joystick>BackBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoBack</Method>    </Function>    <Function>      <Joystick>StartBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoForward</Method>    </Function>    <Assembly>      <Name>GpioDemoBoardUserFunctions.dll</Name>      <Setup class="GpioDemoBoardUserFunctions.UserFunctions">InitSetpperMotorsConfig</Setup>    </Assembly>    <Function>      <Joystick>YBtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">YBtnStepperOnePlus</Method>    </Function>    <!--<Function>      <Joystick>ABtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">ABtnStepperOneMinus</Method>    </Function>-->    <Function>      <Joystick>BBtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">BBtnStepperOneStop</Method>    </Function>    <!--<Function>      <Joystick>XBtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">XBtnStepperOneResetDelay</Method>    </Function>-->  </JoystickFunctions></GpioConfig>