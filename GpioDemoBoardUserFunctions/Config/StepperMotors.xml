<?xml version="1.0" encoding="utf-8"?><GpioConfig>  <!-- Configuration Step 3:  Define Control Pins -->  <ControlPins>      <!-- XBox Joystick connected to MCP expansion chips -->    <!-- Left Side -->      <Pin>      <Name>Stepper Two</Name>      <Number>205</Number>      <Mode>PWMOutput</Mode>      <Joystick>LeftStickUp</Joystick>    </Pin>       <Pin>      <Name>Stepper Two</Name>      <Number>203</Number>      <Mode>PWMOutput</Mode>      <Joystick>LeftStickDown</Joystick>    </Pin>      <!-- Home Row -->    <Pin>      <Name>Back</Name>      <Number>211</Number>      <Mode>Output</Mode>      <Joystick>BackBtn</Joystick>    </Pin>    <Pin>      <Name>Home</Name>      <Number>212</Number>      <Mode>Output</Mode>      <Joystick>HomeBtn</Joystick>    </Pin>    <Pin>      <Name>Start</Name>      <Number>213</Number>      <Mode>Output</Mode>      <Joystick>StartBtn</Joystick>    </Pin>    <!-- Right Side -->    <Pin>      <Name>Stepper One</Name>      <Number>214</Number>      <Mode>PWMOutput</Mode>      <Joystick>RightStickUp</Joystick>    </Pin>      <Pin>      <Name>Stepper One</Name>      <Number>307</Number>      <Mode>PWMOutput</Mode>      <Joystick>RightStickDown</Joystick>    </Pin>       <Pin>      <Name>Delay +</Name>      <Number>305</Number>      <Mode>Output</Mode>      <Joystick>YBtn</Joystick>    </Pin>    <Pin>      <Name>Stop</Name>      <Number>304</Number>      <Mode>Output</Mode>      <Joystick>BBtn</Joystick>    </Pin>    <!--<Pin>      <Name>Delay -</Name>      <Number>303</Number>      <Mode>Output</Mode>      <Joystick>ABtn</Joystick>    </Pin>-->    <!--<Pin>      <Name>Reset</Name>      <Number>302</Number>      <Mode>Output</Mode>      <Joystick>XBtn</Joystick>    </Pin>-->        </ControlPins>  <!--  Define Stepper Motor Drivers  -->  <StepperDrivers>    <!--Stepper Driver -->        <!--  Stepper driver for unipolar on MCP chip-->    <StepperDriver>      <ByName>Stepper One</ByName>      <Joystick direction="1">RightStickUp</Joystick>      <Joystick direction="-1">RightStickDown</Joystick>    </StepperDriver>        <!-- Stpeer driver for bipolar on PCA chip  -->    <!-- wired to M1 and M2 terminals on the Adafruit motor hat -->    <StepperDriver>      <ByName>Stepper Two</ByName>      <Joystick direction="1">LeftStickUp</Joystick>      <Joystick direction="-1">LeftStickDown</Joystick>    </StepperDriver>  </StepperDrivers>  <!-- Seven Segment Displays -->  <SevenSegDisplays>          <SevenSegDisplay>      <ByName>BoardSevenSeg</ByName>      <Joystick direction="1">RightStickUp</Joystick>      <Joystick direction="-1">RightStickDown</Joystick>    </SevenSegDisplay>            <SevenSegDisplay>      <ByName>RemoteSevenSeg</ByName>      <Joystick direction="1">LeftStickUp</Joystick>      <Joystick direction="-1">LeftStickDown</Joystick>    </SevenSegDisplay>    </SevenSegDisplays>  <JoystickFunctions>        <!-- Schema to define joystick inputs mapped to methods -->    <Function>      <Joystick>HomeBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoHome</Method>    </Function>    <Function>      <Joystick>BackBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoBack</Method>    </Function>    <Function>      <Joystick>StartBtn</Joystick>      <Method assembly="GpioJoy.exe" class="GpioJoy.JoystickManager">ConfigurationPageGoForward</Method>    </Function>    <Function>      <Joystick>YBtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">YBtnStepperOnePlus</Method>    </Function>    <!--<Function>      <Joystick>ABtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">ABtnStepperOneMinus</Method>    </Function>-->    <Function>      <Joystick>BBtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">BBtnStepperOneStop</Method>    </Function>    <!--<Function>      <Joystick>XBtn</Joystick>      <Method assembly="GpioDemoBoardUserFunctions.dll" class="GpioDemoBoardUserFunctions.UserFunctions">XBtnStepperOneResetDelay</Method>    </Function>-->        </JoystickFunctions></GpioConfig>