<?xml version="1.0" encoding="utf-8"?><GpioConfig>   <!-- Configuration Step 3:  Define Control Pins -->  <ControlPins>        <!--  Configuration for the GPIO Joy Test Board -->    <!-- XBox Joystick connected to MCP expansion chips -->    <!-- Left Side -->    <Pin>      <Name>Red</Name>      <Number>207</Number>      <Mode>PWMOutput</Mode>      <Joystick>LeftTrigger</Joystick>    </Pin>        <Pin>      <Name>Green</Name>      <Number>205</Number>      <Mode>PWMOutput</Mode>      <Joystick>LeftStickUp</Joystick>    </Pin>        <Pin>      <Name>Reset</Name>      <Number>208</Number>      <Mode>Output</Mode>      <Joystick>DpadRight</Joystick>    </Pin>           <!-- Home Row -->    <Pin>      <Name>Back</Name>      <Number>211</Number>      <Mode>Output</Mode>      <Joystick>BackBtn</Joystick>    </Pin>    <Pin>      <Name>Home</Name>      <Number>212</Number>      <Mode>Output</Mode>      <Joystick>HomeBtn</Joystick>    </Pin>    <Pin>      <Name>Next</Name>      <Number>213</Number>      <Mode>Output</Mode>      <Joystick>StartBtn</Joystick>    </Pin>    <!-- Right Side -->    <Pin>      <Name>Blue</Name>      <Number>214</Number>      <Mode>PWMOutput</Mode>      <Joystick>RightStickUp</Joystick>    </Pin>        <Pin>      <Name>Yellow</Name>      <Number>305</Number>      <Mode>Output</Mode>      <Joystick>YBtn</Joystick>    </Pin>    <Pin>      <Name>Red</Name>      <Number>304</Number>      <Mode>Output</Mode>      <Joystick>BBtn</Joystick>    </Pin>    <Pin>      <Name>Green</Name>      <Number>303</Number>      <Mode>Output</Mode>      <Joystick>ABtn</Joystick>    </Pin>    <Pin>      <Name>Blue</Name>      <Number>302</Number>      <Mode>Output</Mode>      <Joystick>XBtn</Joystick>    </Pin>                   <!--  Adafruit PWM driver-->       <!--  RBG LED -->    <Pin>      <!-- Red -->      <Name>Red</Name>      <Number>513</Number>      <Mode>PWMOutput</Mode>      <Joystick reverse="true">LeftTrigger</Joystick>    </Pin>    <Pin>      <!-- Green -->      <Name>Green</Name>      <Number>514</Number>      <Mode>PWMOutput</Mode>      <Joystick reverse="true">LeftStickUp</Joystick>    </Pin>    <Pin>      <!-- Blue -->      <Name>Blue</Name>      <Number>515</Number>      <Mode>PWMOutput</Mode>      <Joystick reverse="true">RightStickUp</Joystick>    </Pin>      </ControlPins>  <JoystickFunctions>        <!-- Schema to define joystick inputs mapped to methods -->    <Function>      <Joystick>HomeBtn</Joystick>      <Method>JoystickManager,HomeBtn</Method>    </Function>    <Function>      <Joystick>BackBtn</Joystick>      <Method>JoystickManager,BackBtn</Method>    </Function>    <Function>      <Joystick>StartBtn</Joystick>      <Method>JoystickManager,StartBtn</Method>    </Function>    <Function>      <Joystick>YBtn</Joystick>      <Method>JoystickManager,YBtnRGBYellow</Method>    </Function>    <Function>      <Joystick>ABtn</Joystick>      <Method>JoystickManager,ABtnRGBGreen</Method>    </Function>    <Function>      <Joystick>BBtn</Joystick>      <Method>JoystickManager,BBtnRGBRed</Method>    </Function>    <Function>      <Joystick>XBtn</Joystick>      <Method>JoystickManager,XBtnRGBBlue</Method>    </Function>    <Function>      <Joystick>DpadRight</Joystick>      <Method>JoystickManager,DpadRightRGBReset</Method>    </Function>     </JoystickFunctions></GpioConfig>